<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:./resources/mecef</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">Mecef+229</property>
        <property name="hibernate.connection.pool_size">20</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.legacy_limit_handler">true</property>
        <property name="hibernate.dbcp.initialSize">20</property>
        <property name="hibernate.dbcp.maxTotal">-1</property>
        <property name="hibernate.dbcp.maxIdle">-1</property>
        <property name="hibernate.dbcp.minIdle">0</property>
        <property name="hibernate.dbcp.maxWaitMillis">1000</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="org.n2aconsultings.mecef.model.Authorization"/>
        <mapping class="org.n2aconsultings.mecef.model.User"/>
    </session-factory>
</hibernate-configuration>